{
  "manifest_version": 3,
  "name": "Invoice Builder - Starter",
  "version": "0.1",
  "description": "Parse order page and open Invoice Builder webapp",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": [
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.ru/*",
    "*://*.amazon.com/*",
    "*://*.ebay.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.aliexpress.com/*", "*://*.aliexpress.ru/*"],
      "js": ["content-aliexpress.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Invoice Builder"
  }
}
